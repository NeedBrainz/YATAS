<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-12">

    {%- for item in certificates -%}
        <div x-data="{ open: false }"
             x-on:keydown.escape.prevent.stop="open = false"
             class="flex w-full">

            <!-- Trigger -->
            <div class="p-4 w-full rounded-md shadow-lg bg-white bg-opacity-50 grid grid-cols-4 gap-4 select-none cursor-pointer border-4 border-blue-300 italic shadow-inner" x-on:click="open = true">
                <div>
                    <div class="p-2 rounded-full shadow-lg bg-white aspect-square text-blue-400 flex justify-center items-center">
                        {% if item.issuer == 'IBM' %}
