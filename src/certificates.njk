                        {% else %}
                            <svg class="max-w-full w-10 h-10" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256"><path d="M248,128a56,56,0,1,0-96,39.14V224a8,8,0,0,0,11.58,7.16L192,216.94l28.42,14.22A8,8,0,0,0,232,224V167.14A55.81,55.81,0,0,0,248,128ZM192,88a40,40,0,1,1-40,40A40,40,0,0,1,192,88Zm3.58,112.84a8,8,0,0,0-7.16,0L168,211.06V178.59a55.94,55.94,0,0,0,48,0v32.47ZM136,192a8,8,0,0,1-8,8H40a16,16,0,0,1-16-16V56A16,16,0,0,1,40,40H216a16,16,0,0,1,16,16,8,8,0,0,1-16,0H40V184h88A8,8,0,0,1,136,192Zm-16-56a8,8,0,0,1-8,8H72a8,8,0,0,1,0-16h40A8,8,0,0,1,120,136Zm0-32a8,8,0,0,1-8,8H72a8,8,0,0,1,0-16h40A8,8,0,0,1,120,104Z"></path></svg>
                        {% endif %}
                    </div>
                </div>
                <div class="col-span-3 flex flex-col justify-between gap-4">
                    <p>{{ item.name }}</p>
                    <p class="mb-0 text-xs">Earned {{ item.issueDate }}</p>
                </div>
            </div>

            <!-- Modal -->
            <div
                    x-show="open"
                    style="display: none"
                    role="dialog"
                    aria-modal="true"
                    x-id="['modal-title']"
                    :aria-labelledby="$id('modal-title')"
                    class="fixed inset-0 z-10 overflow-y-auto"
            >
                <!-- Overlay -->
                <div x-show="open" x-transition.opacity class="fixed inset-0 bg-black bg-opacity-50"></div>

                <!-- Panel -->
                <div x-show="open" x-transition
                     x-on:click="open = false"
                     class="relative flex min-h-screen items-center justify-center p-4">
                    <div x-on:click.stop
                         x-trap.noscroll.inert="open"
                         class="relative w-full max-w-2xl overflow-y-auto rounded-xl bg-neutral p-12 shadow-lg">
                        <!-- Title -->

                        <!-- Content -->
                        <a target="_blank" href="{{ item.link }}"><figure><img src="/img/certificates/{{ item.img }}" alt="{{ item.name }}" /></figure></a>
                        <p class="text-center text-sm text-black">Verify at: <a class="link link-primary" target="_blank" href="{{ item.link }}">{{ item.link }}</a></p>
                        <!-- Buttons -->
                        <span class="absolute top-2 right-2 cursor-pointer btn btn-ghost btn-circle" x-on:click="open = false">
                        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256"><path d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"></path></svg>
                    </span>

                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {#
    {% for item in certificates %}

        <div class="card w-full shadow-xl relative border-inherit border-2">
            <figure class="m-6"><img src="/img/certificates/{{ item.img }}" alt="{{ item.name }}" /></figure>
            <div class="card-body">
                <h2 class="card-title">{{ item.name }}</h2>
                <p style="text-decoration: underline;"><b>{{ item.issuer }}</b></p>
                <p>{{ item.issueDate }}</p>
                <div class="card-actions justify-end">
                    <a href="{{ item.link }}" target="_blank" class="">View Verification</a>
                </div>
            </div>
        </div>

    {% endfor %}
    #}
</div>
